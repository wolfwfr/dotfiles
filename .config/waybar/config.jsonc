    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  // "sway/mode": {
  //     "format": "<span style=\"italic\">{}</span>"
