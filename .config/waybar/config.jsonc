  "battery": {
    // "full-at": 60,
    "interval": 1,
    "min-length": 7,
    "states": {
      "full": 60,
      "good": 58,
      "warning": 15,
      "critical": 10
    },
    "format": "<span color='#4db578'><big>{icon} </big></span> {capacity}%",
    "format-charging-full": "<span color='#4db578'><big>Û±ü¢</big></span> {capacity}%",
    "format-charging": "<span color='#33ccff'><big>{icon}</big>ÔÉß </span> {capacity}%",
    "format-full": "<span color='#4db578'><big>Û±ü¢</big></span> {capacity}%",
    // "format-full": "<span color='#4db578'><big>Û±ü¢  </big></span> {capacity}%",
    // "format-good": "<span color='#4db578'>Û±ü¢  </span> {capacity}%",
    // "format-plugged": "<span color='#4db578'>{icon} Ôá¶ </span> {capacity}%",
    "format-alt": "{time} {icon}",
    "format-warning": "<span color='#ed8b40'><big>{icon}</big> </span> {capacity}%",
    "format-critical": "<span color='#99100d'><big>{icon} </big></span> {capacity}%",
    // "format-full": "",
    "format-icons": [
      "Û∞Å∫",
      "Û∞Åº",
      "Û∞Åæ",
      "Û∞Åø",
      "Û∞ÇÄ",
      "Û∞ÇÇ"
    ]
