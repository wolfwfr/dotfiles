    "cpu",
    "custom/separator",
    "memory",
    "custom/separator",
    "temperature",
    "custom/separator",
    "backlight",
    "custom/separator",
    // "keyboard-state",
    "custom/notification",
    "custom/separator",
    "battery",
    "battery#bat2"
