  "backlight": {
    "min-length": 6,
    // "device": "acpi_video1",
    "format": "<span color='#4db578'>{icon} </span>{percent}%",
    "tooltip": false,
    "format-icons": [
      "Óéç",
      "Óèì",
      "Óèë",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèä",
      "Óèà",
      "Óéõ"
