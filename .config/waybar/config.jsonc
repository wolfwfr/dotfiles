  "cpu": {
    // "format": "{usage}% Ôãõ ",
    "interval": 5,
    "min-length": 5,
    // "format": "<span color='#4db578'>Óâ¶ </span> {usage}%",
    "format": "<span color='#4db578'><big>Ó∞ô </big></span> {usage}%",
    "tooltip": false
  },
  "memory": {
    // "format": "{}% ÔÉâ"
    "interval": 5,
    "min-length": 5,
    "format": "<span color='#4db578'>Û±¶ò </span> {}%"
  },
  // Framework 13:
  // acpitz temps & cros_ec temps report same values under different names,
  // reportedly: https://community.frame.work/t/framework-13-amd-cpu-temps/59699/2
  //
  // acpitz/.. ‚Üí cros_ec/..
  // temp1 ‚Üí local_f75303@4d
  // temp2 ‚Üí cpu_f75303@4d
  // temp3 ‚Üí ddr_f75303@4d
  // temp4 ‚Üí cpu@4c
  "temperature": {
    "interval": 5,
    "min-length": 6,
    "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon1/temp4_input",
    "critical-threshold": 85,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "<span color='#4db578'>{icon} </span> {temperatureC}¬∞C",
    "format-icons": [
      // "Ôù´",
      "Ôãâ"
      // "Ôù©"
    ]
